<div class="container">
	<div class="jumbotron">
		<h2>Come get your burger</h2>
	</div>
	<div class="row">
		<div class="col-sm-4" id='ready-to-eat'>
			<h3>Burgers</h3>
			<ul>
			  {{#each burger}}
			  	{{#unless this.devoured}}    
				    <li>	    
				        {{this.burger_name}}
				        <form action="/{{this.id}}?_method=PUT" method="POST">
				          <input type="hidden" name="devoured" value="true">
				          <button type="submit">Devour!</button>
				        </form>
				    </li>
				 	<br>
			 	{{/unless}}
			  {{/each}}
			</ul>
		</div>
		<div class="col-sm-4" id='eaten'>
			<h3>Eaten</h3>

			<table class="table table-striped table-bordered">
				{{#each burger}}
					{{#if this.devoured}}
						<tr>
							<td>
								{{this.burger_name}}
							</td>
						</tr>
					{{/if}}
				{{/each}}
			</table>
		</div>
	<div class="col-sm-4" id='add'>
		<h3>Make a new burger</h3>

		<form class="form-inline" action="/" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" id="submit-burger" name="name" placeholder="Name">
				</div>
			<button type="submit" class="btn btn-default">Submit</button>
		</form>

	</div>

	</div>
</div>